<div class="page-header">
  <h1>üí∞ Rollingan Mingguan Cashback</h1>
</div>

<div class="content-container">
  <!-- Filter Section -->
  <div class="filter-section card">
    <div class="input-group">
      <label for="finishDate">Tanggal Finishing:</label>
      <input type="date" id="finishDate" class="form-control">
    </div>
    <div class="input-group">
      <label for="prefixOption">Prefix / Brand:</label>
      <select id="prefixOption" class="form-select">
        <option value="">-- Pilih Brand --</option>
        <option value="as7">AS7 - ASIASLOT777</option>
        <option value="gcr">GCR - GACOR88</option>
        <option value="jt7">JT7 - JITU77</option>
        <option value="k88">K88 - HOKIGACOR77</option>
        <option value="ses">SES - DEWAGACOR77</option>
        <option value="dst">DST - DEWASLOTO</option>
        <option value="slh">SLH - SLOTTHAILAND</option>
      </select>
    </div>
  </div>

  <!-- üîπ Upload Provider -->
  <section class="upload-section white-box">
    <div class="upload-item">
      <h2>üé∞ Provider SLOT</h2>
      <input type="file" id="slot1" accept=".csv,.xlsx" />
    </div>

    <div class="upload-item">
      <h2>üÉè Provider CASINO</h2>
      <input type="file" id="casino1" accept=".csv,.xlsx" />
    </div>

    <div class="upload-item">
      <h2>‚ô†Ô∏è Provider POKER</h2>
      <input type="file" id="poker1" accept=".csv,.xlsx" />
    </div>
  </section>

  <!-- üîπ Tombol + Tiket -->
  <div class="button-section">
    <div class="button-group">
      <button id="processBtn" class="primary">Confirm</button>
      <button id="openSpecialBtn" class="primary" disabled title="Aktif setelah Confirm Data">‚ö° Case Spesial</button>
    </div>

    <div class="tiket-box">
      <h3>üé´ Tiket Deposit</h3>
      <input type="file" id="tiketFile" accept=".xlsx,.csv" />
      <button id="processTiket" class="primary" disabled>Approve</button>
    </div>
  </div>

  <!-- üìä Summary & Agent side by side -->
  <div class="summary-wrapper">
    <div id="summary" class="summary-box"></div>
    <div id="ringkasan-agent" class="summary-box"></div>
  </div>

  <!-- üîπ Tabel hasil -->
  <div id="table-container" class="table-container"></div>

  <!-- ‚¨áÔ∏è Download Excel -->
  <div class="download-box">
    <button id="downloadBtn" class="btn-success" style="display:none;">‚¨áÔ∏è Download Excel</button>
  </div>
</div>

